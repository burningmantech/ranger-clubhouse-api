#!/bin/sh
#
# Dispatcher for Travis CI
#

set -e
set -u
set -o pipefail

wd="$(cd "$(dirname "$0")/.." && pwd)";

case "${TESTENV:=}" in
    "lint")
        exec "${wd}/bin/test_lint" .;
        ;;
    "docker")
        exec "${wd}/bin/test_docker";
        ;;
    *)
        echo "Unknown test environment: ${TESTENV}";
        exit 1;
        ;;
esac;
