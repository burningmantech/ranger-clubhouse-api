#!/bin/sh

#
# Build the Docker container
#

. "$(dirname "$0")/.common.sh";

env_file="${wd}/.env";

if [ ! -f "${env_file}" ]; then
    touch "${env_file}";
fi;

exec docker run                 \
    --memory=512m               \
    --rm                        \
    --name="${container_name}"  \
    --env-file="${env_file}"    \
    --publish=8000:80           \
    "${image_name}"             \
    "$@"
    ;
