#!/bin/sh
#
# Run checkphpsyntax from the PHP Docker image.
#

set -eu

wd="$(cd "$(dirname "$0")/.." && pwd)";

       app="/var/www/application";
image_name="burningman/php-nginx:8.1.13-alpine3.17";

docker run                    \
    --rm                      \
    --volume="${PWD}:${app}"  \
    --workdir="${app}"        \
    "${image_name}"           \
    checkphpsyntax "$@";
